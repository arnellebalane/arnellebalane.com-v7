---
import { getCollection } from 'astro:content';

const socials = await getCollection('socials');
const currentYear = new Date().getFullYear();
---

<footer class="text-slate-200 bg-zinc-900">
    <div class="max-w-5xl mx-auto px-5 py-10 sm:py-12">
        <div class="flex flex-col sm:flex-row sm:justify-end gap-10 sm:gap-20">
            <div>
                <p class="text-sm text-red-100 uppercase tracking-normal mb-2">Say Hello</p>
                <a href="mailto:arnellebalane@gmail.com" class="text-lg hover:underline focus:underline">
                    arnellebalane@gmail.com
                </a>
            </div>

            <div class="max-w-3xs">
                <p class="text-sm text-red-100 uppercase tracking-normal mb-2">Follow Me</p>
                <div class="flex flex-wrap gap-x-3 gap-y-1">
                    {
                        socials.map(({ data: social }) => (
                            <a
                                href={social.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-lg hover:underline focus:underline"
                            >
                                {social.name}
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="border-t border-copy">
        <div class="max-w-5xl mx-auto p-5">
            <p class="text-sm text-red-100 uppercase tracking-normal">
                &copy; {currentYear}, Arnelle Balane
            </p>
        </div>
    </div>
</footer>
